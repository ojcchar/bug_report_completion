<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
	<id>3030</id>
	<title>Disappearing My Sites FAB</title>
	<description>
		<paragraph id="1">
			<sentence id="1.1">* Switch to the My Sites page</sentence>
			<sentence id="1.2">* Tap "Switch Site"</sentence>
			<sentence id="1.3">* Select a site</sentence>
		</paragraph>
		<paragraph id="2">
			<sentence id="2.1">The FAB is now gone (but it will reappear if you swipe left/right).</sentence>
			<sentence id="2.2">Note that this only occurs if you select a site - if you back out of the site picker the FAB correctly reappears.</sentence>
		</paragraph>
	</description>
</bug>
