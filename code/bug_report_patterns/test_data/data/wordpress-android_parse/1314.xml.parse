<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
	<id>1314</id>
	<title>Disappearing images in post editor after activity is closed</title>
	<description>
		<paragraph id="1">
			<sentence id="1.1">1 Enable `Don't keep activities` option in device settings.</sentence>
			<sentence id="1.2">2 Open app, tap new post button.</sentence>
			<sentence id="1.3">3 Add an image from the device gallery.</sentence>
			<sentence id="1.4">Observe it is added to the post.</sentence>
			<sentence id="1.5">4 Add another image from the device gallery.</sentence>
			<sentence id="1.6">Observe that the first image is now gone.</sentence>
		</paragraph>
	</description>
</bug>
