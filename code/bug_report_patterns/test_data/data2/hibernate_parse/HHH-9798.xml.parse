<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
    <id>HHH-9798</id>
    <title>Unique constraint of @JoinColumn in @JoinTable not generated</title>
    <description>
        <paragraph id="1">
            <sentence id="1.1">Regression from H4.</sentence>
        </paragraph>
        <paragraph id="2">
            <sentence id="2.1">No unique constraint is generated for the join columns of this join table:</sentence>
        </paragraph>
        <paragraph id="3">
            <sentence id="3.1">{code:java}
@OneToOne(fetch = FetchType.LAZY)
    @JoinTable(
        name = "ITEM_SHIPMENT", // Required!</sentence>
            <sentence id="3.2">joinColumns =
            @JoinColumn(name = "SHIPMENT_ID"),  // Defaults to ID
        inverseJoinColumns =
            @JoinColumn(name = "ITEM_ID",  // Defaults to AUCTION_ID
                        nullable = false,
                        unique = true)
    )
    protected Item auction;
{code}</sentence>
        </paragraph>
    </description>
</bug>
