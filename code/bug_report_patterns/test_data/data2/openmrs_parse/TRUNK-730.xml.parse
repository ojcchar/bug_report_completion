<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
    <id>TRUNK-730</id>
    <title>Leading zeroes should be ignored in patient identifiers</title>
    <description>
        <paragraph id="1">
            <sentence id="1.1">The API should ignore leading zeroes when searching for identifiers.</sentence>
            <sentence id="1.2">Currently a search for 000123-0 will not find 123-0.</sentence>
            <sentence id="1.3">We know from experience that people will often pad identifiers with zeros to make them align within reports, etc.</sentence>
        </paragraph>
    </description>
</bug>
