<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
	<id>10816</id>
	<title>fb iphone app showing newly created event details in news feed</title>
	<description>
		<paragraph id="1">
			<sentence id="1.1">Steps to reproduce:</sentence>
		</paragraph>
		<paragraph id="2">
			<sentence id="2.1">A user has an iphone with facebook app installed.</sentence>
		</paragraph>
		<paragraph id="3">
			<sentence id="3.1">The facebook user has added a facebook application to their facebook profile.</sentence>
		</paragraph>
		<paragraph id="4">
			<sentence id="4.1">That facebook application publishes an event using the facebook.events.create API.</sentence>
		</paragraph>
		<paragraph id="5">
			<sentence id="5.1">The user opens facebook on their iphone_ and sees event detail data in their news feed.</sentence>
			<sentence id="5.2">&lt;- Bug!</sentence>
			<sentence id="5.3">This behaviour is NOT observed on www.facebook.com.</sentence>
			<sentence id="5.4">Users should not see all events created by an application in their feed.</sentence>
		</paragraph>
	</description>
</bug>
